@model EditUserViewModel
@{
    ViewBag.Title = "EditUser";
}

<h2>Redigera användare</h2>
<div>
    <div class="row">
        <div class="col-md-8">
            <section id="loginform">
                @using (Html.BeginForm("EditUser", "Teacher", new { id = ViewBag.Id }, FormMethod.Post, new { @class = "form-horizontal, col-md-offset-7", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.DisplayNameFor(m => m.Email)
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Beskrivning" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.DisplayNameFor(m => m.CourseId)
                            @Html.DropDownListFor(m => m.CourseId, (List<SelectListItem>) ViewBag.CourseIds, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.CourseId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" value="Skicka in" class="btn btn-default" />
                        </div>
                    </div>
                }
            </section>
        </div>
    </div>
</div>
