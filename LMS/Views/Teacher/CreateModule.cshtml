@model CreateModuleViewModel
@{
    ViewBag.Title = "CreateModule";
}

<h2>Skapa modul</h2>

<div>
    <div class="row">
        <div class="col-md-8">
            <section id="loginform">
                @using (Html.BeginForm("CreateModule", "Teacher", new { id = Model.CourseId }, FormMethod.Post, new { @class = "form-horizontal, col-md-offset-7", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.DisplayNameFor(m => m.Name)
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Namn", autofocus = "autofocus" })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.DisplayNameFor(m => m.Description)
                            @Html.TextBoxFor(m => m.Description, new { @class = "form-control", placeholder = "Beskrivning" })
                            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.DisplayNameFor(m => m.StartDate)
                            <p>Som tidigast kan modulen starta: @(((DateTime)ViewBag.AtEarliest).ToString("yyyy/MM/dd"))</p>
                            @Html.TextBoxFor(m => m.StartDate, new { type = "date", @class = "form-control, datepicker", @Value = ((DateTime) ViewBag.AtEarliest).ToString("yyyy/MM/dd") })
                            @Html.ValidationMessageFor(m => m.StartDate, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.DisplayNameFor(m => m.EndDate)
                            <p>Som senast kan modulen sluta: @(((DateTime)ViewBag.AtLatest).ToString("yyyy/MM/dd"))</p>
                            @Html.TextBoxFor(m => m.EndDate, new { type = "date", @class = "form-control, datepicker", @Value = Model.EndDate.ToString("yyyy/MM/dd") })
                            @Html.ValidationMessageFor(m => m.EndDate, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.HiddenFor(m => m.CourseId, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.CourseId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" value="Skicka in" class="btn btn-default" />
                        </div>
                    </div>
                }
            </section>
        </div>
    </div>
</div>


